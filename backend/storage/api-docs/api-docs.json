{
    "openapi": "3.0.0",
    "info": {
        "title": "TaskFlow API",
        "description": "API documentation for TaskFlow project",
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://localhost:8000",
            "description": "Local server"
        }
    ],
    "paths": {
        "/api/tasks": {
            "get": {
                "tags": [
                    "Tasks"
                ],
                "summary": "List all tasks",
                "operationId": "471d938a3bfaeb6fbd981d7c3e2728b0",
                "responses": {
                    "200": {
                        "description": "Tasks retrieved successfully"
                    }
                }
            },
            "post": {
                "tags": [
                    "Tasks"
                ],
                "summary": "Create a new task",
                "operationId": "f803ebdb2300acdb7e93bbe8d0b9a2e8",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "task",
                                    "status_id",
                                    "responsavel"
                                ],
                                "properties": {
                                    "task": {
                                        "type": "string",
                                        "example": "Implement login system"
                                    },
                                    "status_id": {
                                        "type": "string",
                                        "example": "uuid-of-status"
                                    },
                                    "data_inicio": {
                                        "type": "string",
                                        "format": "date",
                                        "example": "2025-10-31"
                                    },
                                    "data_final": {
                                        "type": "string",
                                        "format": "date",
                                        "example": "2025-11-05"
                                    },
                                    "responsavel": {
                                        "type": "string",
                                        "example": "uuid-of-user"
                                    },
                                    "comentarios": {
                                        "type": "string",
                                        "example": "High priority task"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Task created successfully"
                    },
                    "422": {
                        "description": "Validation error"
                    }
                }
            }
        },
        "/api/tasks/{id}": {
            "get": {
                "tags": [
                    "Tasks"
                ],
                "summary": "Get a specific task",
                "operationId": "90b3cd4d2d4b416dc989d2055dbed06c",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "UUID of the task",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "example": "uuid-of-task"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Task found"
                    },
                    "404": {
                        "description": "Task not found"
                    }
                }
            },
            "put": {
                "tags": [
                    "Tasks"
                ],
                "summary": "Update a task",
                "operationId": "1aaf37e74360ef4c10fadaee02ae77fb",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "UUID of the task",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "example": "uuid-of-task"
                        }
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "task": {
                                        "type": "string",
                                        "example": "Update login system"
                                    },
                                    "status_id": {
                                        "type": "string",
                                        "example": "uuid-of-status"
                                    },
                                    "data_inicio": {
                                        "type": "string",
                                        "format": "date",
                                        "example": "2025-10-31"
                                    },
                                    "data_final": {
                                        "type": "string",
                                        "format": "date",
                                        "example": "2025-11-05"
                                    },
                                    "comentarios": {
                                        "type": "string",
                                        "example": "Updated comments"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Task updated successfully"
                    },
                    "404": {
                        "description": "Task not found"
                    },
                    "422": {
                        "description": "Validation error"
                    }
                }
            },
            "delete": {
                "tags": [
                    "Tasks"
                ],
                "summary": "Delete a task",
                "operationId": "ad582480cd57c2a4e3b6a426943eeca5",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "UUID of the task",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "example": "uuid-of-task"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Task deleted successfully"
                    },
                    "404": {
                        "description": "Task not found"
                    }
                }
            }
        }
    },
    "tags": [
        {
            "name": "Tasks",
            "description": "Endpoints for managing tasks"
        }
    ]
}